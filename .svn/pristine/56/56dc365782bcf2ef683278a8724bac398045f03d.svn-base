        private void loadDiv()
        {
            if (radCorp.Checked == true)
            {
                divArticles.Attributes.Add("style", "display:block");
            }
            else
            {
                divArticles.Attributes.Add("style", "display:none");
            }
            if (radPartnership.Checked == true)
