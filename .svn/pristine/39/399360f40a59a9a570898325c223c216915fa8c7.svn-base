            string qur = "Exec [proc_getUserList]";
            DataSet ds = dbLibrary.idGetCustomResult(qur);
            ddlSpecialist.DataSource = ds;
            ddlSpecialist.DataTextField = "Name";
            ddlSpecialist.DataValueField = "userId";
            ddlSpecialist.DataBind();
        }


